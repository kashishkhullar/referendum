<div class="container" id="loginform">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field input-group input-group-sm ">
    <%= f.label :email , class: "input-group-addon"%>
    <%= f.email_field :email, class: "form-control",autofocus: true %>
  </div>
  <br>

<div class="field input-group input-group-sm ">
    <%= f.label :password, class: "input-group-addon" %> 
    <%= f.password_field :password, class: "form-control", autocomplete: "off"%>
  </div>
<br>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions input-group input-group-sm col-xs-4">
    <%= f.submit "Log In" ,class: "form-control"%>
  </div>
<% end %>

<%= render "voters/shared/links" %>
</div>
