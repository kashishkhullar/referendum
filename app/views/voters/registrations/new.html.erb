<div class="container" id="loginform">
<h2>Sign Up</h2>
<%#=devise_error_messages!%>
<%#=devise_error_messages!.length%>
<% if devise_error_messages! %>
<%#=devise_error_messages!['0'] %>
<%@i=0%>
<%#=devise_error_messages![@i] %>
<script type="text/javascript">
//noty({text: '<%#="hello" %>', type: 'success'});


<% devise_error_messages!.length.times do %>
  
  setTimeout(function(){
  noty({text: '<%=devise_error_messages![@i].to_s %>', type: 'error'});
},200*<%=@i%>);
  <%@i=@i+1%>
  <%end%>
</script> 



<%end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  

  <div class="field input-group input-group-sm c">
    <%= f.label :email , class: "input-group-addon"%>
    <%= f.email_field :email, class: "form-control",autofocus: true %>
  </div>
  <br>
   <div class="field input-group input-group-sm">
    <%= f.label :username, class: "input-group-addon" %>
    <%= f.text_field :username, class: "form-control", autofocus: true %>
  </div>
<br>
  <div class="field input-group input-group-sm">
    <%= f.label :password , class: "input-group-addon"%>
    
    <%= f.password_field :password,  class: "form-control",autocomplete: "off" %>
  </div>
  <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>

  <div class="field input-group input-group-sm">
    <%= f.label :password_confirmation , class: "input-group-addon"%>
    <%= f.password_field :password_confirmation,  class: "form-control",autocomplete: "off" %>
  </div>
<br>
  <div class="actions input-group input-group-sm col-xs-4">
    <%= f.submit "Sign up" ,class: "form-control"%>
  </div>
<% end %>

<%= render "voters/shared/links" %>
</div>