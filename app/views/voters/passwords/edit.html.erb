<div class="container" id="loginform">
<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field input-group input-group-sm">
    <%= f.label :"New Passwrod" , class: "input-group-addon"%>
    
    <%= f.password_field :password,  class: "form-control",autocomplete: "off" %>
  </div>
  <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>

  <div class="field input-group input-group-sm">
    <%= f.label :password_confirmation, "Confirm new password" ,class: "input-group-addon"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control" %>
  </div>

  <div class="actions input-group input-group-sm col-xs-4">
    <%= f.submit "Change my password",,class: "form-control" %>
  </div>
<% end %>

<%= render "voters/shared/links" %>
