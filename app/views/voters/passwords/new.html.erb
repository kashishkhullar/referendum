<div class="container" id="loginform">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field input-group input-group-sm c">
    <%= f.label :email , class: "input-group-addon"%>
    <%= f.email_field :email, class: "form-control",autofocus: true %>
  </div>
  <br>


  <div class="actions input-group input-group-sm col-xs-4">
    <%= f.submit "Send me reset password instructions" ,class: "form-control"%>
  </div>
<% end %>

<%= render "voters/shared/links" %>
</div>